#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
puts "Welcome to Tic Tac Toe!"
puts "Would you like to play? (Y/n)"
response = gets.strip

if (response == "y" || response == "Y")
  display_board(board)
  puts "Please select a number between 1 and 9."
  response = gets.strip
  move(response)
end
